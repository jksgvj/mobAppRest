<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
    </style>

    <style name="TabLayoutStyle">
        <item name="tabTextColor">@drawable/tab_selector</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="zena" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#D97787</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Цвет иконки поиска -->
        <item name="searchIcon">@drawable/ic_search_white</item>
        <!-- Цвет текста -->
        <item name="android:textColor">#FFFFFF</item>
        <!-- Цвет подсказки -->
        <item name="android:textColorHint">#B3FFFFFF</item>
    </style>

</resources>